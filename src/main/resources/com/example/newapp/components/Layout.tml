<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <title>${title}</title>
    </head>
    <body>
    <script type="text/javascript" src="//yandex.st/share/share.js" charset="utf-8"></script>

    <!-- start header -->
        <div class="header">
            <div class="logo">
                <h1>
                    <t:pagelink page="index">
                        <img src="${context:layout/inews-logo.png}" alt="alt Text"/>
                    </t:pagelink>
                </h1>
                <h1>Лучшие новости!</h1>
            </div>
            <div class="menu">
                <ul>
                    <li><t:pagelink page="AddNews">Добавить новость</t:pagelink></li>
                    <li><t:pagelink page="About">О нас</t:pagelink></li>
                    <li><t:pagelink page="Contact">Обратная связь</t:pagelink></li>
                </ul>
            </div>
        </div>
        <!-- end header -->
        <!-- start page -->
        <div class="page">
            <!-- start content -->
            <div class="content">
                <div class="post">
                    <div class="title">
                        <h1>${title}</h1>
                    </div>
                    <div class="entry">
                        <t:body/>
                    </div>
                </div>
            </div>
            <!-- end content -->
            <br style="clear: both;"/>
        </div>
        <!-- end page -->
        <!-- start footer -->
        <div class="footer">
            <p class="legal">
                &copy;2013 iNews. All Rights Reserved.
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Design by
                <a href="http://www.yandex.ru/">xy6er</a>
            </p>
            <div align="center">
                <div class="yashare-auto-init" data-yashareL10n="ru"
                     data-yashareType="button" data-yashareQuickServices="yaru,vkontakte,facebook,twitter"></div>
                <img src="${context:layout/hit.gif}" alt="Счетчик"/>
                <img src="${context:layout/counter-1.gif}" alt="Счетчик"/>
            </div>

        </div>
        <!-- end footer -->
    </body>
</html>
